<div class="profile-body">
  <div class="profile-wraper">
    <div class="profile-info">
      <%- include ("./layouts/info.ejs") %>

      <hr />
      <%- include ("./layouts/menu.ejs") %>
    </div>
    <div class="profile-box">
      <div class="box-content">
        <h2>Gallery Photo</h2>

        <% if (message) { %>
        <p><%= message %></p>
        <% } %>

        <hr />
        <div class="form-wraper">
          <h3>Gallery Photo</h3>
          <div class="gallary-area">
            <% user.gallery.forEach(gall => { %>
             <div class="gallary-item">
              <a class="delet-btn" href="/gallery"><i class="fa fa-times" aria-hidden="true"></i></a>
              
              <img src="./media/gallery/<%= gall %> " alt="">
            </div>
            <% }) %>
            
            
  
            
          </div>
          <form
            action="/gallery-update"
            method="POST"
            enctype="multipart/form-data">
            <div class="form-group">
              <label for="">Select Gallery Photo</label>
              <div class="profile-photo gallery"></div>
              <label class="upload">
                <i class="fa fa-photo uplaod"></i>
                <input
                  id="gallery_photo"
                  multiple
                  name="gallery"
                  style="display: none"
                  type="file"
                />
              </label>
            </div>

            <div class="form-group">
              <button>Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
