<div class="profile-body">
  <div class="profile-wraper">
    <div class="profile-info">
      <%- include ("./layouts/info.ejs") %>

      <hr />
      <%- include ("./layouts/menu.ejs") %>
    </div>
    <div class="profile-box">
      <div class="profile-details">
        <div class="profile-photo">
          <% if (user.photo) { %>   
            <img src="./media/users/<%= user.photo %>" alt="">
         
        <% } else{ %>
            <img  src="./images/avatar.png" alt="">
             
        <% }  %> 
        <div class="user-data">
          <h2><%= user.name %></h2>
          <p><%= user.email %></p>
          <p class="flow-info">5k followers â€¢ 3k following
          </p>
        </div>
          
        </div>
        <hr />
        <h3>Gallery Photo</h3>
        <div class="gallary-area">
          <% user.gallery.forEach(gall => { %>
           <div class="gallary-item">
            <img src="./media/gallery/<%= gall %> " alt="">
          </div>
          <% }) %>
          
          

          
        </div>
      </div>
    </div>
  </div>
</div>

