<div class="profile-body">
  <div class="profile-wraper">
    <div class="profile-info">
      <%- include ("./layouts/info.ejs") %>

      <hr />
      <%- include ("./layouts/menu.ejs") %>
    </div>
    <div class="profile-box">
      <div class="profile-details">
        <div class="profile-photo">
          <% if (profile.photo) { %>
          <img src="./media/users/<%= profile.photo %>" alt="" />

          <% } else{ %>
          <img src="./images/avatar.png" alt="" />

          <% } %>
          <div class="user-data">
            <h2><%= profile.name %></h2>
            <p><%= profile.email %></p>
            <p class="flow-info">
              <%= profile.follower.length %> followers â€¢ <%= profile.following.length %>
              following
            </p>
          </div>
        </div>
        <hr />
        <h3>Gallery Photo</h3>
        <div class="gallary-area">
          <% profile.gallery.forEach(gall => { %>
          <div class="gallary-item">
            <img src="./media/gallery/<%= gall %> " alt="" />
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
</div>
